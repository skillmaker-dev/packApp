<AnchorPane fx:id="container" prefHeight="400.0" prefWidth="600.0" styleClass="myPane" stylesheets="@../../CSSFiles/rootPageCss.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.packapp.loginPage.rootPageController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="1000.0" layoutX="-1.0">
         <image>
            <Image url="@../../CSSFiles/IMG/background1.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="textInput" layoutX="305.0" layoutY="244.0" prefHeight="42.0" prefWidth="372.0" promptText="Username" styleClass="textField" stylesheets="@../../CSSFiles/rootPageCss.css" />
      <PasswordField fx:id="passwordInput" layoutX="305.0" layoutY="299.0" prefHeight="42.0" prefWidth="372.0" promptText="Password" styleClass="textField" stylesheets="@../../CSSFiles/rootPageCss.css" />
      <ImageView fx:id="logoView" fitHeight="147.0" fitWidth="280.0" layoutX="406.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/Icon.png" />
