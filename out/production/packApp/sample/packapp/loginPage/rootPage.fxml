         </cursor></Button>
      <Label alignment="CENTER" layoutX="264.0" layoutY="178.0" prefHeight="53.0" prefWidth="432.0" text="LOGIN" textFill="#ebebeb">
         <font>
            <Font size="37.0" />
         </font>
      </Label>
      <Button fx:id="forgetPassword" layoutX="459.0" layoutY="357.0" mnemonicParsing="false" onAction="#resetPassword" prefHeight="42.0" prefWidth="216.0" styleClass="resetButton" stylesheets="@../../CSSFiles/rootPageCss.css" text="Forgot Password?">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
